---
import Layout from '../../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = await useTranslations(lang);

// Mock product data
const products = [
  {
    id: 'product-1',
    title: 'Exhaust Muffler',
    description: 'Electric Valvetronic Exhaust Cutout with Muffler Cat Back Exhaust System Valve Kit.',
    image: '/images/product-1.jpg'
  },
  {
    id: 'product-2',
    title: 'Stainless Steel Battery Relocation Kit',
    description: '12V Car/RV/Marine Battery Box for Trailer, Boat, Trolling Motor, Kayak. ',
    image: '/images/product-2.jpg'
  },
  {
    id: 'product-3',
    title: 'Gasoline engine vegetable and medicinal material seeder',
    description: 'Gasoline engine 4-29 rows vegetables precision seeder multifunctional small light seeds seeding machine.',
    image: '/images/Gasoline-material-seeder.jpg'
  },
  {
    id: 'product-4',
    title: 'Hand Push Vegetable Seeder Planter',
    description: 'This hand-push seeder is an all-in-one machine for digging, planting, and covering soil, hand-push to complete the sowing task.',
    image: '/images/manual_seeder_cover.jpg'
  }
];
---

<Layout title={t('products.title')}>
  <div class="container">
    <h1 class="page-title">{t('products.title')}</h1>
    
    <div class="products-grid">
      {products.map(product => (
        <div class="product-card">
          <div class="product-image">
            <img src={product.image} alt={product.title} />
          </div>
          <div class="product-content">
            <h2>{product.title}</h2>
            <p>{product.description}</p>
            <a href={`/${lang}/products/${product.id}`} class="btn">{t('products.viewDetails')}</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }
  
  .page-title {
    font-size: 2.5rem;
    text-align: center;
    margin: 3rem 0;
    color: var(--color-text);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }
  
  .product-card {
    background-color: white;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
    transition: transform 0.3s, box-shadow 0.3s;
  }
  
  .product-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
  }
  
  .product-image {
    height: 200px;
    overflow: hidden;
  }
  
  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }
  
  .product-card:hover .product-image img {
    transform: scale(1.05);
  }
  
  .product-content {
    padding: 1.5rem;
  }
  
  .product-content h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  
  .product-content p {
    color: #4b5563;
    margin-bottom: 1.5rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.5rem 1rem;
    background-color: var(--color-primary);
    color: white;
    border-radius: 0.375rem;
    text-decoration: none;
    font-weight: 500;
    transition: background-color 0.2s;
  }
  
  .btn:hover {
    background-color: #4338ca;
  }
  
  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: 1fr;
    }
  }
</style>