---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = await useTranslations(lang);
---

<Layout title={t('home.title')}>
  <section class="hero">
    <div class="hero-content">
      <h1>{t('home.title')}</h1>
      <p>{t('home.subtitle')}</p>
      <div class="cta-buttons">
        <a href={`/${lang}/products`} class="btn primary">{t('home.cta')}</a>
      </div>
    </div>
    <div class="hero-image">
      <img src="/images/product-hero.png" alt="Product showcase" />
    </div>
  </section>

  <section class="features-preview">
    <h2>Core Features</h2>
    <div class="feature-cards">
      <div class="feature-card">
        <div class="icon">ðŸš€</div>
        <h3>High Performance</h3>
        <p>Our product delivers exceptional performance to help you complete your work faster.</p>
      </div>
      <div class="feature-card">
        <div class="icon">ðŸ”’</div>
        <h3>Secure & Reliable</h3>
        <p>Using advanced security technology to ensure your data remains safe.</p>
      </div>
      <div class="feature-card">
        <div class="icon">ðŸ”„</div>
        <h3>Seamless Integration</h3>
        <p>Easily integrates with your existing tools and systems to improve efficiency.</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin: 4rem 0;
  }
  
  .hero-content {
    flex: 1;
  }
  
  .hero-image {
    flex: 1;
  }
  
  .hero-image img {
    max-width: 100%;
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  h1 {
    font-size: 3rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: #1f2937;
  }
  
  .hero p {
    font-size: 1.25rem;
    color: #4b5563;
    margin-bottom: 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }
  
  .btn.primary {
    background-color: var(--color-primary);
    color: white;
  }
  
  .btn.primary:hover {
    background-color: #4338ca;
  }
  
  section {
    margin: 6rem 0;
  }
  
  h2 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 3rem;
    color: #1f2937;
  }
  
  .feature-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .feature-card {
    background-color: white;
    padding: 2rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }
  
  .feature-card .icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .feature-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: #1f2937;
  }
  
  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
    }
    
    h1 {
      font-size: 2.25rem;
    }
  }
</style>