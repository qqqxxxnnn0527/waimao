---
import Layout from '../../layouts/Layout.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = await useTranslations(lang);
---

<Layout title={t('home.title')}>
  <section class="hero">
    <div class="hero-content">
      <h1>{t('home.title')}</h1>
      <p>{t('home.subtitle')}</p>
      <div class="cta-buttons">
        <a href={`/${lang}/products`} class="btn primary">{t('home.cta')}</a>
      </div>
    </div>
    <div class="hero-image">
      <img src="/images/product-hero.png" alt="Product showcase" />
    </div>
  </section>

  <section class="features-preview">
    <h2>Our Services</h2>
    <div class="feature-cards">
      <div class="feature-card">
        <div class="icon-title">
          <div class="icon">🔒</div>
          <h3>Source Factory</h3>
        </div>
        <p>We are a source factory, so our service is faster, more comprehensive and more cost-effective.</p>
      </div>
      <div class="feature-card">
        <div class="icon-title">
          <div class="icon">🔄</div>
          <h3>Cross-border Warehouse</h3>
        </div>
        <p>We have multiple overseas warehouses, so receiving goods is faster, payment is more convenient, and maintenance is more accessible.</p>
      </div>
      <div class="feature-card">
        <div class="icon-title">
          <div class="icon">🚀</div>
          <h3>Rapid Communication</h3>
        </div>
        <p>We will reply to your email within 12 hours with the most comprehensive solution.</p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin: 4rem 0;
  }
  
  .hero-content {
    flex: 1;
  }
  
  .hero-image {
    flex: 1;
  }
  
  .hero-image img {
    max-width: 100%;
    border-radius: 0.5rem;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }
  
  h1 {
    font-size: 3rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: white; /* 将颜色从 #1f2937 改为 white */
  }
  
  .hero p {
    font-size: 1.25rem;
    color: #4b5563;
    margin-bottom: 2rem;
  }
  
  .cta-buttons {
    display: flex;
    gap: 1rem;
  }
  
  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    border-radius: 0.375rem;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s;
  }
  
  .btn.primary {
    background-color: var(--color-primary);
    color: white;
  }
  
  .btn.primary:hover {
    background-color: #4338ca;
  }
  
  section {
    margin: 6rem 0;
  }
  
  h2 {
    font-size: 2rem;
    text-align: center;
    margin-bottom: 3rem;
    color: white; /* 将颜色从 #1f2937 改为 white */
  }
  
  .feature-cards {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .feature-card {
    background-color: white;
    padding: 1rem;
    border-radius: 0.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
  }
  
  .icon-title {
    display: flex;
    align-items: center;
    margin-bottom: 1rem;
  }
  
  .feature-card .icon {
    font-size: 2rem;
    margin-right: 1rem;
  }
  
  .feature-card h3 {
    font-size: 1.25rem;
    margin-top: 0;
    margin-bottom: 0;
    color: #1f2937;
  }
  
  .feature-card p {
    color: #1f2937; /* 添加更深的字体颜色，从默认颜色改为深灰色 */
  }
  
  @media (max-width: 768px) {
    .hero {
      flex-direction: column;
    }
    
    h1 {
      font-size: 2.25rem;
    }
  }
</style>