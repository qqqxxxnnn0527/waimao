<style>
  .hero {
    display: flex;
    align-items: center;
    gap: 2rem;
    margin: 4rem 0;
    background: rgba(26, 26, 46, 0.5);
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    position: relative;
    overflow: hidden;
  }
  
