---
import Layout from './Layout.astro';
import { getLangFromUrl } from '../i18n/utils';

const { frontmatter } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<Layout title={frontmatter.title}>
  <div class="markdown-container">
    <div class="product-header">
      <h1>{frontmatter.title}</h1>
      {frontmatter.description && <p class="description">{frontmatter.description}</p>}
    </div>
    
    {frontmatter.image && (
      <div class="featured-image">
        <img src={frontmatter.image} alt={frontmatter.title} />
        <div class="image-overlay"></div>
      </div>
    )}
    
    <div class="content">
      <slot />
    </div>
    
    <div class="back-to-products">
      <a href={`/${getLangFromUrl(Astro.url)}/products`}>
        <span class="arrow">←</span> 
        {getLangFromUrl(Astro.url) === 'zh' ? '返回产品列表' : 'Back to Products'}
      </a>
    </div>
  </div>
</Layout>

<style>
  .markdown-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background-color: var(--color-card-bg);
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(138, 43, 226, 0.1);
  }
  
  h1 {
    font-size: 2.5rem;
    color: var(--color-text);
    margin-bottom: 1rem;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .description {
    font-size: 1.25rem;
    color: var(--color-text);
    opacity: 0.8;
    margin-bottom: 2rem;
    font-style: italic;
  }
  
  .product-header {
    position: relative;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .featured-image {
    position: relative;
    margin: 2rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    border: 2px solid rgba(138, 43, 226, 0.2);
    animation: fadeIn 1s ease-out forwards;
  }
  
  .image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom, rgba(15, 15, 26, 0), rgba(15, 15, 26, 0.7));
    z-index: 1;
  }
  
  .back-to-products {
    margin-top: 3rem;
    animation: fadeInUp 0.8s ease-out forwards;
  }
  
  .back-to-products a {
    display: inline-flex;
    align-items: center;
    color: var(--color-text);
    text-decoration: none;
    transition: all 0.3s ease;
  }
  
  .back-to-products a:hover {
    color: var(--color-secondary);
    transform: translateX(-5px);
  }
  
  .arrow {
    margin-right: 0.5rem;
    font-size: 1.2rem;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* 为内容元素添加动画 */
  .content :global(h2),
  .content :global(h3),
  .content :global(p),
  .content :global(ul),
  .content :global(ol),
  .content :global(blockquote),
  .content :global(table) {
    animation: fadeInUp 0.8s ease-out forwards;
    animation-delay: calc(var(--animation-order, 0) * 0.1s);
    opacity: 0;
  }
  
  .content :global(h2) {
    --animation-order: 1;
  }
  
  .content :global(p) {
    --animation-order: 2;
  }
  
  .content :global(ul), .content :global(ol) {
    --animation-order: 3;
  }
  
  .content :global(blockquote) {
    --animation-order: 4;
  }
  
  .content :global(table) {
    --animation-order: 5;
  }
  
  .featured-image img {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.5s ease;
  }
  
  .featured-image:hover img {
    transform: scale(1.05);
  }
  
  .content {
    font-size: 1.125rem;
    line-height: 1.7;
    color: var(--color-text);
  }
  
  .content :global(h2) {
    font-size: 1.875rem;
    color: var(--color-text);
    margin: 2rem 0 1rem;
    position: relative;
    padding-bottom: 0.5rem;
  }
  
  .content :global(h2)::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 3px;
    background: var(--gradient-primary);
    border-radius: 3px;
  }
  
  .content :global(h3) {
    font-size: 1.5rem;
    color: var(--color-text);
    margin: 1.5rem 0 1rem;
  }
  
  .content :global(p) {
    margin-bottom: 1.5rem;
  }
  
  .content :global(ul), .content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 2rem;
  }
  
  .content :global(li) {
    margin-bottom: 0.5rem;
  }
  
  .content :global(blockquote) {
    border-left: 4px solid var(--color-primary);
    padding: 1rem 1.5rem;
    font-style: italic;
    color: var(--color-text);
    opacity: 0.9;
    margin: 1.5rem 0;
    background-color: rgba(138, 43, 226, 0.1);
    border-radius: 0 0.5rem 0.5rem 0;
  }
  
  .content :global(pre) {
    background-color: rgba(15, 15, 26, 0.8);
    color: #f9fafb;
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid rgba(138, 43, 226, 0.3);
  }
  
  .content :global(code) {
    font-family: monospace;
    background-color: rgba(138, 43, 226, 0.1);
    padding: 0.2rem 0.4rem;
    border-radius: 0.25rem;
    font-size: 0.875em;
    color: var(--color-secondary);
  }
  
  .content :global(pre code) {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    font-size: 0.875rem;
    color: #f9fafb;
  }
  
  .content :global(a) {
    color: var(--color-secondary);
    text-decoration: none;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .content :global(a)::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100%;
    height: 1px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transform-origin: right;
    transition: transform 0.3s ease;
  }
  
  .content :global(a:hover) {
    color: var(--color-primary);
  }
  
  .content :global(a:hover)::after {
    transform: scaleX(1);
    transform-origin: left;
  }
  
  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1.5rem 0;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    border: 2px solid rgba(138, 43, 226, 0.2);
  }
  
  .content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin: 1.5rem 0;
    border-radius: 0.5rem;
    overflow: hidden;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }
  
  .content :global(th), .content :global(td) {
    border: 1px solid rgba(138, 43, 226, 0.2);
    padding: 0.75rem;
    text-align: left;
  }
  
  .content :global(th) {
    background: var(--gradient-primary);
    color: white;
    font-weight: 600;
  }
  
  .content :global(tr) {
    background-color: var(--color-bg-light);
    transition: background-color 0.3s ease;
  }
  
  .content :global(tr:hover) {
    background-color: rgba(138, 43, 226, 0.1);
  }
  
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 2rem;
  }
  
  .tag {
    background: var(--gradient-primary);
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    box-shadow: 0 2px 5px rgba(138, 43, 226, 0.3);
    transition: all 0.3s ease;
  }
  
  .tag:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(138, 43, 226, 0.5);
  }
</style>